<h1>Tabela de Preços</h1>
<p>
  <%= link_to 'Adicionar Preço', new_price_path , class: "btn btn-default", role: "button"%>
</p>
<table class="table table-condensed table-responsive table-bordered">
  <thead>
    <tr>
      <th>Quantidade de Dias</th>
      <th>Categoria</th>
      <th>Preço</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @categories.each do |category| %>
      <% category.current_prices.each do |price| %>
        <tr>
          <td><%= price.days %></td>
          <td><%= category.name %></td>
          <td><%= price.price %></td>
          <td><%= link_to 'Editar Preço', new_price_path(category_id: category, days: price.days, price: price.price) %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
