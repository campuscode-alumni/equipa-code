<section class='contract'>
  <ul>
    <li><%= @contract.customer.name %></li>
    <% @contract.equipment.each do |equipment|%>
    <li><%= equipment.model %> - Preço: R$ <%= equipment.acquisition_price %></li>
    <% end %>
    <li><%= @contract.delivery_address %></li>
    <li><%= @contract.responsable %></li>
    <li><%= @contract.cpf %></li>
    <li><%= @contract.rental_period %></li>
    <li><%= friendly_date @contract.initial_date.to_date %></li>
    <li><%= @contract.amount %></li>
    <li><%= @contract.discount %></li>
    <li><%= friendly_date @contract.created_at %></li>
    <li><%= friendly_date @contract.return_date %></li>
  </ul>
  <% if @contract.receipt.nil? %>
    <%= link_to "Emitir recibo", receipt_contract_path(@contract),  method: :post %>
  <% else %>
    <%= link_to "Visualizar recibo", receipt_contract_path(@contract) %>
  <% end %>
  <%= link_to 'Emitir recibo de devolução', new_contract_return_receipt_path(@contract) %>
</section>
